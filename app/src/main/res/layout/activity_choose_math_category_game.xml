<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.choosesubject.ChooseSubjectActivity">

    <ImageView
        android:id="@+id/downEye"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_down_eye"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/upEye"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_up_eye"
        android:transitionName="upEyeTransition"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/additionSubtractionIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_addition_subtraction"
        app:layout_constraintBottom_toBottomOf="@id/multiplicationDivisionIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/multiplicationDivisionIcon"
        >
    </ImageView>

    <ImageView
        android:id="@+id/multiplicationDivisionIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_multiplication_division"
        app:layout_constraintTop_toBottomOf="@id/upEye"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scoreIcon"
        app:layout_constraintStart_toEndOf="@id/additionSubtractionIcon"
        >
    </ImageView>

    <TextView
        android:id="@+id/scoreIcon"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="SCORE"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_backgroundcategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/downEye"
        app:layout_constraintBottom_toTopOf="@id/downEye"
        app:layout_constraintTop_toBottomOf="@id/multiplicationDivisionIcon"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>